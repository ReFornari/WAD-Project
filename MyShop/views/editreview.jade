extends layout
block content
  .row
  .container
  h1 Edit a review
  .formHold
    form(method="post")
      each review in indOne
        fieldset
          label(for="name") Your name:
          input(name="name", type="text", value=review.name)
          label(for="content") Your review:
          input(name="content", type="text", value=review.content)
          button.button(type="submit") Edit this review